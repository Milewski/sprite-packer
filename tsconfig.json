{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "watch": false,
        "sourceMap": true,
        "removeComments": true,
        "sourceRoot": "./source",
        "outDir": "./dist",
        "lib": [
            "es6"
        ],
        "types": [
            "node", "jsonschema"
        ]
    },
    "include": [
        "source/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}